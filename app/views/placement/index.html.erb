<!DOCTYPE html>
<html ng-app="myApp" ng-controller="myCtrl">
<head>
<title>Placement </title>


<script>
		var app = angular.module('myApp', []);
		app.controller('myCtrl', function($scope) {


													    $scope.reset = function() {
													    							$scope.give=$scope.m
													      
													    							};
													    
    												});

</script>




</head>

<%if ( Result.where(:user_id=>current_user.id).size==0) %>

								<body>



								<%Question.all.each do |question|%>

								<h2>

								<label><%=question.name%></label>

								</h2>


								<select id='<%=question.id%>' ng_model="<%='m.id'+question.id.to_s%>">
									<%question.answers.each do |ans|%>
									<option value=<%=ans.id%> >
									<%=ans.choice%>
									</option>
									<%end%>
								</select>






								<%end%>




								<%= form_for('student',url:placement_create_path) do |f| %>

								  <div class="field">
								    <%=f.hidden_field :user_id,:value=>current_user.id%>

								  </div>
								  


								  <div class="field">
								    <%=f.hidden_field :name,:value=>"{{give}}"%>

								  </div>
								  
								  <div class="actions">
								    <%= f.submit :ng_click=>"reset()",:value=>"submit"  %>
								  </div>

								<%end%>









								</body>


<% end %>



